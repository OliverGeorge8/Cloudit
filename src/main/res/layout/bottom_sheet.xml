<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


<LinearLayout
    android:orientation="vertical"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/fileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Helloooasf"
        android:paddingBottom="20dp"
        android:layout_marginLeft="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />
<TextView
    android:background="?android:attr/selectableItemBackground"
    android:id="@+id/copyLink"
    android:padding="20dp"
    android:drawablePadding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:drawableLeft="@drawable/ic_outline_file_copy"
    android:drawableStart="@drawable/ic_outline_file_copy"
    android:text="@string/copy_link"/>

    <TextView
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/detail"
        android:padding="20dp"
        android:drawablePadding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_info"
        android:drawableStart="@drawable/ic_baseline_info"
        android:text="@string/details_and_activity"/>
    <TextView
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/share"
        android:padding="20dp"
        android:drawablePadding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_share"
        android:drawableStart="@drawable/ic_baseline_share"
        android:text="@string/share"/>
    <TextView
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/delete"
        android:padding="20dp"
        android:drawablePadding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_delete"
        android:drawableStart="@drawable/ic_baseline_delete"
        android:text="@string/delete"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>


</LinearLayout>
</layout>